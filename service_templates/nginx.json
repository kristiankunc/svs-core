{
	"$schema": "https://raw.githubusercontent.com/kristiankunc/svs-core/refs/heads/main/service_templates/schema.json",
	"args": [],
	"default_contents": [
		{
			"content": "<html>\n<head><title>Welcome to NGINX!</title></head>\n<body>\n<h1>Success! NGINX is running.</h1>\n</body>\n</html>\n",
			"location": "/usr/share/nginx/html/index.html"
		},
		{
			"content": "server {\n    listen 80;\n    server_name _;\n\n    root /usr/share/nginx/html;\n\n    location / {\n        try_files $uri $uri/ =404;\n    }\n}",
			"location": "/etc/nginx/conf.d/default.conf"
		}
	],
	"default_env": [],
	"default_ports": [
		{
			"container": 80,
			"host": null
		}
	],
	"default_volumes": [
		{
			"container": "/usr/share/nginx/html",
			"host": null
		},
		{
			"container": "/etc/nginx/conf.d",
			"host": null
		}
	],
	"description": "A minimal NGINX web server with default config",
	"healthcheck": {
		"interval": 30,
		"retries": 3,
		"start_period": 5,
		"test": [
			"CMD",
			"curl",
			"-f",
			"http://localhost/"
		],
		"timeout": 10
	},
	"image": "nginx:latest",
	"name": "nginx-webserver",
	"start_cmd": null,
	"type": "image"
}
