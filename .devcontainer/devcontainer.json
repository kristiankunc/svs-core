{
	"name": "Library DevContainer",
	"build": {
		"dockerfile": "Dockerfile",
		"context": ".."
	},
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-python.python",
				"ms-python.vscode-pylance",
				"charliermarsh.ruff",
				"njpwerner.autodocstring",
				"ms-python.black-formatter",
				"tamasfe.even-better-toml",
				"ms-python.mypy-type-checker"
			],
			"settings": {
				"python.formatting.provider": "autopep8",
				"editor.formatOnSave": true,
				"python.linting.enabled": true,
				"python.linting.ruffEnabled": true,
				"python.linting.mypyEnabled": true,
				"editor.codeActionsOnSave": {
					"source.fixAll": true
				},
				"python.analysis.typeCheckingMode": "standard",
				"python.defaultInterpreterPath": "/home/dev/.venv/bin/python",
				"python.analysis.extraPaths": ["/home/dev/.venv/lib/python3.11/site-packages"],
				"python.analysis.indexing": true
			}
		}
	},
	"postCreateCommand": "pre-commit install && pre-commit autoupdate",
	"workspaceFolder": "/home/dev/app",
	"remoteUser": "dev"
}
